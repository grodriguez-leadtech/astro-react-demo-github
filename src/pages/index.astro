import Counter from "../components/Counter.jsx";
import TodoList from "../components/TodoList.jsx";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro + React Demo - Gestor de Tareas Inteligente</title>
    <meta name="description" content="Demo de Astro con React que incluye contador interactivo y gestor de tareas con dise침o moderno y accesible." />
    <meta name="keywords" content="Astro, React, Todo List, Counter, Demo, Cursor AI" />
    <meta name="author" content="Astro React Demo" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Astro + React Demo - Gestor de Tareas" />
    <meta property="og:description" content="Demo de Astro con React que incluye contador interactivo y gestor de tareas con dise침o moderno y accesible." />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:title" content="Astro + React Demo - Gestor de Tareas" />
    <meta property="twitter:description" content="Demo de Astro con React que incluye contador interactivo y gestor de tareas con dise침o moderno y accesible." />
  </head>
  <body>
    <header>
      <h1>游 Astro + React + Cursor</h1>
      <p>Demo interactivo de componentes React en Astro</p>
    </header>
    
    <main>
      <section aria-labelledby="counter-section">
        <h2 id="counter-section" class="sr-only">Contador Interactivo</h2>
        <Counter client:load />
      </section>
      
      <section aria-labelledby="todo-section">
